#include "libft.h"

static int	word_cnt(char const *s, char c)
{
	int i;
	int cnt;

	i = 0;
	cnt = 1;
	while (s[i])
	{
		if (s[i] == c)
		{
			cnt++;
			while (s[i] && s[i] == c)
				++i;
			if (s[i] == '\0')
				return (cnt);
		}
		i++;
	}
	cnt++;
	return (cnt);
}

static int	word_len(char const *s, char c, int idx)
{
	int len;

	len = 0;
	while (s[idx] && s[idx] != c)
	{
		idx++;
		len++;
	}
	return (len - 1);
}

static void	word_ptr(char *ptr, char const *s, char c, int *idx)
{
	while (s[*idx] && s[*idx] != c)
	{
		*ptr = ((char *)s)[*idx];
		*idx += 1;
		ptr++;
	}
}

char		**ft_split(char const *s, char c)
{
	int		i;
	int		idx;
	int		len;
	char	**result;

	if (!s)
		return (0);
	i = 0;
	idx = 0;
	if (!(result = (char **)malloc(sizeof(char *) * (word_cnt(s, c) + 1))))
		return (NULL);
	while (s[idx] && i < word_cnt(s, c))
	{
		if (c == s[idx])
		{
			++idx;
			continue;
		}
		len = word_len(s, c, idx);
		if (!(result[i] = (char*)malloc(sizeof(char) * (len + 1))))
			return (NULL);
		word_ptr(result[i], s, c, &idx);
		i++;
		idx++;
	}
	result[i] = 0;
	return (result);
}
